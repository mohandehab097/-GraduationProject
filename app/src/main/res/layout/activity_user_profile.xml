<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".UserProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:background="@drawable/backg">

            <ImageView
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="53dp"
                android:src="@drawable/car" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="120dp"
                android:fontFamily="sans-serif-condensed-light"
                android:letterSpacing="0.5"
                android:text="RAKNII"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/username"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginTop="120dp"
                android:fontFamily="serif"
                android:letterSpacing="0.2"
                android:text="Mohand Ehab"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

        </FrameLayout>




        <androidx.cardview.widget.CardView
            android:id="@+id/bookingData"
            android:layout_width="330dp"
            android:layout_height="370dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="@dimen/activity_horizontal_margin">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/emailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:text="Email :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/emailCard"
                    android:layout_width="210dp"
                    android:padding="30dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="23dp"
                    app:cardCornerRadius="60dp"
                    app:cardBackgroundColor="@color/yellow"
                    app:cardElevation="@dimen/cardview_default_radius">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/adamina"
                        android:text="mohand@gmail.com"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="100dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phoneLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:text="Mobile No.  :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/phoneCard"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="60dp"
                    app:cardBackgroundColor="@color/yellow"
                    app:cardElevation="@dimen/cardview_default_elevation">

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/adamina"
                        android:text="01200961717"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <RelativeLayout
                android:id="@+id/changePasswordLayout"
                android:layout_width="450dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/changePassword"
                    android:layout_width="260dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="72dp"
                    android:layout_marginTop="18.7dp"
                    android:background="@drawable/button_corners"
                    android:fontFamily="@font/adamina"
                    android:gravity="center"
                    android:padding="20dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:text="Change Your Password"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/changePassword_icon"
                    android:layout_width="24.7dp"
                    android:layout_height="20.3dp"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="38dp"
                    android:src="@drawable/key" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/homeLayout"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginRight="40dp"
                android:layout_marginTop="100dp">

                <TextView
                    android:id="@+id/home"
                    android:layout_width="260dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="72dp"
                    android:layout_marginTop="18.7dp"
                    android:background="@drawable/button_corners"
                    android:fontFamily="@font/adamina"
                    android:gravity="center"
                    android:padding="20dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:text="Home"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/home_icon"
                    android:layout_width="24.7dp"
                    android:layout_height="20.3dp"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="38dp"
                    android:src="@drawable/backbtn" />
            </RelativeLayout>







        </androidx.cardview.widget.CardView>










    </LinearLayout>

</RelativeLayout>