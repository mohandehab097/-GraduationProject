<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/bookingData"
        android:adjustViewBounds="true"
        android:layout_width="320dp"
        app:layout_constrainedHeight="true"
        android:layout_height="300dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="@dimen/activity_horizontal_margin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/bookingDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:text="Booking Date :"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/dateCard"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                app:cardCornerRadius="60dp"
                app:cardBackgroundColor="@color/yellow"
                app:cardElevation="@dimen/cardview_default_radius">

                <TextView
                    android:id="@+id/bookingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/adamina"
                    android:text="11/2/2021"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bookingTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:text="Booking Time :"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/timeCard"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="60dp"
                app:cardBackgroundColor="@color/yellow"
                app:cardElevation="@dimen/cardview_default_elevation">

                <TextView
                    android:id="@+id/bookingTime"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/adamina"
                    android:text="mohand"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="110dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/carNumberLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:text="Car Number :"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/carNumberCard"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="60dp"

                app:cardBackgroundColor="@color/yellow"
                app:cardElevation="@dimen/cardview_default_elevation">

                <TextView
                    android:id="@+id/carNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/adamina"
                    android:text="0121201219"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="150dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/carCharacterLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:text="Car Character :"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/carCharacterCard"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="60dp"

                app:cardBackgroundColor="@color/yellow"
                app:cardElevation="@dimen/cardview_default_elevation">

                <TextView
                    android:id="@+id/carCharacter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/adamina"
                    android:text="0121201219"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="190dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/allowLateTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:text="Max Time Late:"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/maximumTimeCard"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                app:cardCornerRadius="60dp"
                app:cardBackgroundColor="@color/yellow"
                app:cardElevation="@dimen/cardview_default_elevation">


                <TextView
                    android:id="@+id/allowLateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/adamina"
                    android:text="0121201219"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/cancelReservationLayout"
            android:layout_width="225dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginTop="95dp">

            <TextView
                android:id="@+id/cancelReservation"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginLeft="73dp"
                android:layout_marginTop="18.7dp"
                android:background="@drawable/button_corners"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:padding="20dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textSize="9dp"
                android:text="Cancel Your Reservation"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cancelReservation_icon"
                android:layout_width="17.7dp"
                android:layout_height="17.3dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="36dp"
                android:src="@drawable/cancel" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>