<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="203dp"
            android:background="@drawable/backg">

            <ImageView
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="63dp"
                android:src="@drawable/car" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="130dp"
                android:fontFamily="sans-serif-condensed-light"
                android:letterSpacing="0.5"
                android:text="RAKNII"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"

                android:textSize="25dp"
                android:textStyle="bold" />

        </FrameLayout>




        <RelativeLayout
            android:layout_width="450dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            >


            <TextView

                android:id="@+id/goToGoogleMaps"
                android:layout_width="270dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="18.7dp"
                android:layout_marginRight="62dp"
                android:background="@drawable/button_corners"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:padding="20dp"
                android:textSize="11dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="Parking Location"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/maps_icon"
                android:layout_width="24.7dp"
                android:layout_height="20.3dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/location" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="450dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            >


            <TextView

                android:id="@+id/goToReservation"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="18.7dp"
                android:layout_marginRight="62dp"
                android:background="@drawable/button_corners"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:padding="20dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="Book your Parking Slot"
                android:textColor="#000000"
                android:textSize="11dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/booking_icon"
                android:layout_width="24.7dp"
                android:layout_height="20.3dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/booking" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="450dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            >


            <TextView
                android:id="@+id/reservationData"
                android:layout_width="270dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="18.7dp"
                android:layout_marginRight="62dp"
                android:background="@drawable/button_corners"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:padding="20dp"
                android:paddingTop="14dp"
                android:textSize="11dp"
                android:paddingBottom="14dp"
                android:text="Your Reservations"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/reservation_icon"
                android:layout_width="24.7dp"
                android:layout_height="20.3dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/booking" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="450dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            >


            <TextView
                android:id="@+id/goToProfile"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="18.7dp"
                android:layout_marginRight="62dp"
                android:background="@drawable/button_corners"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:padding="20dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textSize="11dp"
                android:text="Your Profile "
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="24.7dp"
                android:layout_height="20.3dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="39dp"
                android:src="@drawable/prodile" />
        </RelativeLayout>





        <RelativeLayout
            android:layout_width="450dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"

            >

            <TextView

                android:id="@+id/AboutUs"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="18.7dp"
                android:layout_marginRight="62dp"
                android:background="@drawable/button_corners"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:padding="20dp"
                android:paddingTop="14dp"
                android:textSize="11dp"
                android:paddingBottom="14dp"
                android:text="About Us "
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/aboutus_icon"
                android:layout_width="24.7dp"
                android:layout_height="20.3dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/info" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="450dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            >


            <TextView
                android:id="@+id/logoutBtn"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="62dp"

                android:background="@drawable/button_corners"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:padding="20dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="Log Out "
                android:textSize="11dp"
                android:textColor="#000000"
                android:textStyle="bold" />
    <ImageView
        android:id="@+id/logout_icon"
        android:layout_width="24.7dp"
        android:layout_height="20.3dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/logout" />
</RelativeLayout>




    </LinearLayout>

</RelativeLayout>



