<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".PaymentActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="#ffffff"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:background="@drawable/backg">

            <ImageView
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="73dp"
                android:src="@drawable/car" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="150dp"
                android:fontFamily="sans-serif-condensed-light"
                android:letterSpacing="0.5"
                android:text="RAKNII"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"

                android:textSize="25dp"
                android:textStyle="bold" />

        </FrameLayout>



        <androidx.cardview.widget.CardView
            android:id="@+id/bookingData"
            android:layout_width="330dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/adamina"
                android:text="Your Booking Payment"
                android:textAlignment="center"
                android:textColor="#FFC107"
                android:textSize="16dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="320dp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/adamina"
                    android:text="You stayed in the slot :"
                    android:textColor="@android:color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/timeCard"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    app:cardCornerRadius="60dp"
                    app:cardBackgroundColor="@color/yellow"
                    app:cardElevation="@dimen/cardview_default_radius">

                    <TextView
                        android:id="@+id/hourMinutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="@font/adamina"
                        android:text="2h 30m"
                        android:textColor="@android:color/black"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="320dp"
                android:padding="5dp"
                android:layout_marginTop="95dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/timeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:text="You must pay :"
                    android:textColor="@android:color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/payCard"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="66dp"
                    app:cardCornerRadius="60dp"
                    app:cardBackgroundColor="@color/yellow"
                    app:cardElevation="@dimen/cardview_default_radius">


                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="@font/adamina"
                        android:text="40$"
                        android:textColor="@android:color/black"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:orientation="horizontal" >


                <Button
                    android:id="@+id/cash"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_corners"
                    android:clickable="true"
                    android:fontFamily="@font/adamina"
                    android:text="Cash"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_corners"
                    android:clickable="true"
                    android:fontFamily="@font/adamina"
                    android:text="Visa"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>












    </LinearLayout>



</RelativeLayout>



