<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".CurrentReservationsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:background="@drawable/backg">

            <ImageView
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="73dp"
                android:src="@drawable/car" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="150dp"
                android:fontFamily="sans-serif-condensed-light"
                android:letterSpacing="0.5"
                android:text="RAKNII"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"

                android:textSize="25dp"
                android:textStyle="bold" />

        </FrameLayout>


        <TextView
            android:id="@+id/noBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:text="You Have No Current Reservations !"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/layoutGoToBooking"
            android:layout_width="450dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/goToBooking"
                android:layout_width="230dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="18.7dp"
                android:background="@drawable/button_corners"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:padding="20dp"

                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="Book Now!"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/goToBookingLabel"
                android:layout_width="24.7dp"
                android:layout_height="20.3dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="38dp"
                android:src="@drawable/booking" />
        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/bookingData"
            android:layout_width="330dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="@dimen/activity_horizontal_margin">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/bookingDateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:text="Booking Date :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/dateCard"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    app:cardCornerRadius="60dp"
                    app:cardBackgroundColor="@color/yellow"
                    app:cardElevation="@dimen/cardview_default_radius">

                    <TextView
                        android:id="@+id/bookingDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/adamina"
                        android:text="11/2/2021"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="90dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bookingTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:text="Booking Time :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/timeCard"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="60dp"
                    app:cardBackgroundColor="@color/yellow"
                    app:cardElevation="@dimen/cardview_default_elevation">

                    <TextView
                        android:id="@+id/bookingTime"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/adamina"
                        android:text="mohand"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="130dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/carNumberLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:text="Car Number :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/carNumberCard"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    app:cardCornerRadius="60dp"

                    app:cardBackgroundColor="@color/yellow"
                    app:cardElevation="@dimen/cardview_default_elevation">

                    <TextView
                        android:id="@+id/carNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/adamina"
                        android:text="0121201219"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="170dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/carCharacterLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:text="Car Character :"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/carCharacterCard"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="60dp"

                    app:cardBackgroundColor="@color/yellow"
                    app:cardElevation="@dimen/cardview_default_elevation">

                    <TextView
                        android:id="@+id/carCharacter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/adamina"
                        android:text="0121201219"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="210dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/allowLateTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:text="Max Time Late:"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/maximumTimeCard"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    app:cardCornerRadius="60dp"
                    app:cardBackgroundColor="@color/yellow"
                    app:cardElevation="@dimen/cardview_default_elevation">


                    <TextView
                        android:id="@+id/allowLateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/adamina"
                        android:text="0121201219"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:id="@+id/cancelReservationLayout"
            android:layout_width="450dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/cancelReservation"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="18.7dp"
                android:background="@drawable/button_corners"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:padding="20dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="Cancel Your Reservation"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cancelReservation_icon"
                android:layout_width="24.7dp"
                android:layout_height="20.3dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="38dp"
                android:src="@drawable/cancel" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="450dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/backUserReservationBtn"
                android:layout_width="230dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="8.7dp"
                android:background="@drawable/button_corners"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:padding="20dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="Back"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="24.7dp"
                android:layout_height="20.3dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/backbtn" />
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>