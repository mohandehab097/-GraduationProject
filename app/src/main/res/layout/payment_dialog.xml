<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="219dp"
    android:padding="9dp"
    android:background="@drawable/changepasswordborder"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="300dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="20dp"
        android:gravity="center"

        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/adamina"
            android:text="Your Payment Data"
            android:textAlignment="center"
            android:textColor="#FFC107"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:fontFamily="@font/adamina"
                android:text="Your Booking Date :"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/adamina"
                android:text="1/6/2019"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:padding="5dp"

            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/timeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:text="Your Stayed In Slot :"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/adamina"
                android:text="2h"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/carCharacterLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:fontFamily="@font/adamina"
                android:text="Money You Paid :"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/adamina"
                android:text="50$"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_corners"
            android:clickable="true"
            android:fontFamily="@font/adamina"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>





</LinearLayout>