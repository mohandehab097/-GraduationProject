<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="280dp"
    android:padding="9dp"
    android:background="@drawable/white_fill__rounded_color"
    android:orientation="vertical" >


<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="20dp"
    android:gravity="center"
    android:background="@drawable/customborder"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Your Booking Data"
        android:layout_marginBottom="4dp"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#FFC107"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="Your Booking Date :"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/6/2019"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="bold"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:padding="5dp"

        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/timeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Expected Booking Time :"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:56"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/carNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Car Number :"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/carNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="9995"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/carCharacterLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:text="Your Car Character :"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/carCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="س أ ب"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>
    <TextView
        android:id="@+id/txt_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Are You Sure From Your Data! Dou Want Confirm Booking ?"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:orientation="horizontal" >


        <Button
            android:id="@+id/btn_confrim"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/blue_fill__rounded_color"
            android:clickable="true"

            android:text="Confirm"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/blue_fill__rounded_color"
            android:clickable="true"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>